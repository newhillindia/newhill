# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/newhill_spices
DB_HOST=localhost
DB_PORT=5432
DB_NAME=newhill_spices
DB_USER=username
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_ACCOUNT_ID=your-aws-account-id

# S3 Configuration
S3_BUCKET_NAME=newhill-spices-assets
S3_BUCKET_REGION=us-east-1
S3_BUCKET_DOMAIN=your-bucket.s3.amazonaws.com

# CloudFront Configuration
CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-distribution-id
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
USE_CLOUDFRONT=false

# Application Configuration
NODE_ENV=development
PORT=3000
API_PORT=3001
WORKER_PORT=3002

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email Configuration (SES)
SES_FROM_EMAIL=noreply@newhillspices.com
SES_REGION=us-east-1

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_CACHE=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG=false

